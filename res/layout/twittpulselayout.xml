<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/omapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TwittsText"
                android:textColor="@android:color/holo_blue_dark" android:visibility="visible"
                android:layout_alignParentTop="false" android:layout_alignTop="@+id/omapview"
                android:hint="Twitt" android:lines="1" android:maxLines="1" android:minLines="1"
                android:textSize="8sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CountOfTwettsText" android:textColor="@android:color/holo_blue_dark"
                android:hint="CountOfTwetts" android:minLines="1" android:maxLines="1" android:lines="1"
                android:textSize="8sp"/>
    </LinearLayout>

</RelativeLayout>